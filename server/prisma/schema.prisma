// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  username       String   @unique
  password       String
  name           String   @default("")
  gender         String   @default("")
  dateOfBirth    String   @default("")
  preferences    String   @default("") // JSON array stored as string
  images         String   @default("") // JSON array: [{imageUrl, width, height}]
  role           String   @default("user")
  dateOfCreation DateTime @default(now())

  carts Cart[]
}

model Product {
  id                  String @id @default(uuid())
  produto             String @unique // Zara product code
  imagem              String // Local image path: /uploads/products/...
  nome                String
  tamanhosDisponiveis String // JSON array stored as string
  tipo                String
  preco               String
  loja                String
  link                String
  descricao           String
  parteDoCorpo        String // upper, lower, overall, inner, outer
  genero              String // masculino, feminino, unisex

  carts Cart[]
}

model Cart {
  id         String  @id @default(uuid())
  user_id    String
  user       User    @relation(fields: [user_id], references: [id])
  product_id String
  product    Product @relation(fields: [product_id], references: [id])
  quantity   Int     @default(1)

  @@index([user_id, product_id])
}
