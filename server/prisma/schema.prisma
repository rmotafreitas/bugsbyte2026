// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  username       String   @unique
  password       String
  role           String   @default("user")
  dateOfCreation DateTime @default(now())

  // Balance
  balance Float @default(0)

  // Relations
  transactions Transaction[]
  trades       Trade[]
}

model Transaction {
  id           String   @id @default(uuid())
  userId       String
  type         String // "deposit" | "withdrawal"
  amount       Float
  balanceAfter Float
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Trade {
  id            String   @id @default(uuid())
  userId        String
  symbol        String
  amount        Float // Amount in base currency (e.g. BTC)
  costUSD       Float // Total cost to buy
  revenueUSD    Float // Total revenue from sell
  feesUSD       Float // Total fees paid
  profitUSD     Float // Net profit/loss
  profitPercent Float // Net profit/loss percentage
  buyExchange   String
  sellExchange  String
  buyPrice      Float
  sellPrice     Float
  status        String   @default("executed") // "executed" | "failed"
  createdAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
